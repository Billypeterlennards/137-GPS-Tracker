<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/notificationParent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/notificationIcon"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        style="@style/Widget.AppCompat.NotificationActionContainer"
        android:background="@color/appText" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:text="@string/notification_title_moving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notificationTitle"
            tools:text="@string/notification_title_moving"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
            android:gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Notification.Title" />

        <TextView
            android:text="@string/notification_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notificationSubtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_directions_run_black_24dp"
        android:id="@+id/notificationMovementModeBtn"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        style="@style/Widget.AppCompat.ImageButton" />

</LinearLayout>